#/bin/bash
#Get scripts paths
scriptsPath=$HOME/Dev/Other/scripts
datetime="date  +%Y-%m-%d_%H:%M:%S%P"
#Evaluate important paths
if [ -d $scriptsPath ]; then
  echo "Found scripts folder at $scriptsPath"
else
  echo "scripts folder NOT FOUND"
  exit $?
fi
echo "Pushing to git.."
cd $scriptsPath
git add .
git commit -m "Backup `$datetime`"
git push origin master

echo "===================DONE==================="
